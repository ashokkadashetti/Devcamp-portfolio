
<h1>Portfolio items</h1>

	<%= link_to "Create new Portfolio item", new_portfolio_path %>
	<hr>	
	<% @portfolio_items.each do |f| %>
		<p><%= link_to f.title, portfolio_path(f) %></p>
		<p><%= f.subtitle %></p>
		<p><%= f.body %></p>
		<%= image_tag f.thumb_image unless f.thumb_image.nil? %>
		<%= link_to "Edit", edit_portfolio_path(f) %>&nbsp 
		<a href="/portfolios/<%= f.id %>/edit">Edit two</a>
		<%= link_to 'Delete portfolio item', portfolio_path(f), method: :delete, data: { confirm: 'Are you sure?' } %>
		<hr>

	<% end -%>
